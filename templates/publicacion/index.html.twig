{% extends 'base.html.twig' %}

{% block title %}Publicacion index{% endblock %}

{% block body %}

    <div class="w-75 mb-2" style="margin:auto;">
        <h1 style="text-align:center" class="font-weight-bold">Publicaciones</h1>
        <div class="border border-secondary rounded p-3">
            <table class="table table-striped table-bordered  table-hover" id="datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Tipo Publicacion</th>
                <th>Usuario Creador</th>
                <th>Fecha Y Hora</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicacion in publicacions %}
            <tr>
                <td>{{ publicacion.id }}</td>
                <td>{{ publicacion.titulo }}</td>
                <td>{{ publicacion.tipoPublicacion }}</td>
                <td>{{ publicacion.usuarioCreador }}</td>
                <td>{{ publicacion.fechaYHora ? publicacion.fechaYHora|date('Y-m-d H:i:s') : '' }}</td>
                
                <td>
                    <a href="{{ path('publicacion_show', {'id': publicacion.id}) }}">show</a>
                    <a href="{{ path('publicacion_edit', {'id': publicacion.id}) }}">edit</a>
                    <a href="{{ path('nueva_suscripcion', {'id': publicacion.id}) }}">suscribirse</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    </div>
</div>

    <a href="{{ path('publicacion_new') }}">Create new</a>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready( function () {
    $('#datatable').DataTable();
    
} );
</script>
{% endblock %}
